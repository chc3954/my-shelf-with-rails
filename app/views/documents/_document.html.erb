<div id="<%= dom_id(document) %>" class="bg-white rounded-xl border border-slate-200 p-4 hover:shadow-lg hover:border-indigo-200 transition-all duration-300 group flex flex-col justify-between h-48" data-search-target="item" data-name="<%= document.name %>">
  <div class="flex justify-between items-start">
    <div class="p-2 bg-slate-50 rounded-lg group-hover:bg-white group-hover:shadow-sm transition-all">
      <%= get_file_icon(document.file_type) %>
    </div>
    <%= button_to document_path(document), method: :delete, class: "text-slate-300 hover:text-red-500 hover:bg-red-50 p-1.5 rounded-md transition-colors opacity-0 group-hover:opacity-100 cursor-pointer", title: "Delete file" do %>
      <%= icon(:trash, "w-4 h-4") %>
    <% end %>
  </div>
  <div class="mt-4">
    <h3 class="font-medium text-slate-800 truncate" title="<%= document.name %>"><%= document.name %></h3>
    <div class="flex items-center text-xs text-slate-400 mt-1 space-x-2">
      <span><%= format_file_size(document.file_size) %></span>
      <span>â€¢</span>
      <span><%= document.created_at.strftime("%Y-%m-%d") %></span>
    </div>
  </div>
  <% if document.file.attached? %>
    <a 
      href="<%= rails_blob_path(document.file, disposition: "attachment") %>" 
      class="mt-3 block text-center w-full py-2 bg-slate-50 hover:bg-indigo-50 text-slate-600 hover:text-indigo-600 text-sm font-medium rounded-lg transition-colors border border-slate-100 hover:border-indigo-100"
    >
      Download
    </a>
  <% else %>
    <span class="mt-3 block text-center w-full py-2 bg-red-50 text-red-600 text-sm font-medium rounded-lg border border-red-100 cursor-default">
      File Missing
    </span>
  <% end %>
</div>